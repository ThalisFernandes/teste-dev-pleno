// aq a gnt define o schema do banco de dados
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // relacionamento com as operacoes
  operations Operation[]

  @@map("users")
}

model Operation {
  id          String        @id @default(cuid())
  type        OperationType
  fuelType    FuelType
  quantity    Float // em litros
  date        DateTime
  unitPrice   Float // preco unitario da tabela
  taxRate     Float // percentual do tributo
  selicRate   Float @default(11.5) // taxa selic fixa em 11.5%
  totalValue  Float // valor total calculado
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  // relacionamento com usuario
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("operations")
}

enum OperationType {
  COMPRA
  VENDA
}

enum FuelType {
  GASOLINA
  ETANOL
  DIESEL
}